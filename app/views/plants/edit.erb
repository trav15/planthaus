<div class="container">
  <div class="col-md-8 col-md-offset-2">
    <h2>PLANTHAUS</h2>
    <h3>Edit Plant</h3>

    <div class="content">
      <form action="/plants/<%= @plant.id %>" method="POST">
        <input type="hidden" name="_method" value="patch">
        <p>Plant name: <input type="text" name="name" value="<%= @plant.name %>"></p>
        <p>Scientific name: <input type="text" name="scientific_name" value="<%= @plant.scientific_name %>"</p>
        <p>Type: <input type="radio" name="plant_type" value="leafy" checked=<%= "checked" if @plant.plant_type == "leafy" %>> Leafy
          <input type="radio" name="plant_type" value="succulent" checked=<%= "checked" if @plant.plant_type == "succulent" %>> Succulent
          <input type="radio" name="plant_type" value="cactus" checked=<%= "checked" if @plant.plant_type == "cactus"%>> Cactus</p>
        <p>Light requirements: <input type="radio" name="light_requirement" value="low" checked=<%= "checked" if @plant.light_requirement == "low" %>> Low
          <input type="radio" name="light_requirement" value="medium" checked=<%= "checked" if @plant.light_requirement == "medium" %>> Medium
          <input type="radio" name="light_requirement" value="bright" checked=<%= "checked" if @plant.light_requirement == "bright" %>> Bright</p></p>
        <p>Water requirements: <input type="text" name="water_requirement" value="<%= @plant.water_requirement %>"></p>
        <p>Date purchased: <input type="text" name="date_purchased" value="<%= @plant.date_purchased %>"></p>
        <p>Notes : <input type="text" name="notes" value="<%= @plant.notes %>"></p>
        <input type="submit" value="Update Plant">
      </form>
      <br/>
      <a href="/plants">Back</a><br/>
      <a href="/logout">Logout</a>
    </div>

  </div>
</div>
